         <img
          class="w-[18%] object-contain "
          alt=""
          src="https://joelmg.netlify.app/logo-jmg.webp"
        />
        <img
          class="object-contain w-[28%]"
          alt=""
          src="https://joelmg.netlify.app/logo-jmg.webp"
        />
        <img
          class="object-contain w-[30%]"
          alt=""
          src="https://joelmg.netlify.app/logo-jmg.webp"
        />
       
      </div>
      
    </section>

    <!-- Forma de poner una imagen de fondo -->
