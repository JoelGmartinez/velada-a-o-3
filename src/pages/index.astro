---
import Layout from "../layouts/Layout.astro";
import boxers from "../boxers.json";

const year = new Date().getFullYear();

---

<Layout title="La Velada del Año 3">
  <body class="relative">
    <header class="relative">
      <div
        class="md:absolute md:left-1/2 md:-translate-x-1/2 flex flex-col gap-1 justify-center items-center mt-4 md:mt-0 md:top-8 z-10">
        <img
          class="w-32 lg:w-64 h-auto animate-fade-down "
          alt="Logo de la Velada del Año, tercera edición"
          src="/logo.webp"
          width="385"
          height="412"
        />
        <h1 class="boxing text-3xl lg:text-5xl text-center text-white">
          <span
            class="bg-clip-text text-transparent bg-gradient-to-b from-white via-gray-300 to-white inline-block leading-relaxed"
            >la velada del año</span
          >
          <span class="text-yellow-300">III</span>
        </h1>
      </div>
    </header>

    <div class="relative">
      <section
        id="boxers"
        class={"flex justify-between relative [&>div>img]:absolute [&>div>img]:bottom-0 [&>div>img]:w-auto [&>div>img]:animate-ease-in-out [&>div>img]:animate-duration-700 h-[40vh] md:h-[65vh] lg:h-screen pt-4 lg:pt-24 border-b border-white/10 overflow-hidden"}>

        <div class="relative w-full">
          <img
            class="left-0 h-full z-50 animate-fade-right"
            src="/boxers/coscu.webp"
            alt="Coscu"
            style={boxers.coscu.clip}
          />
          <img
            class="left-[5%] h-[80%] z-40 animate-delay-150 animate-fade-right"
            src="/boxers/mayichi.webp"
            alt="Mayichi"
            style={boxers.mayichi.clip}
          />
          <img
            class="left-[15%] h-[75%] z-30 animate-delay-300 animate-fade-right"
            src="/boxers/viruzz.webp"
            alt="Viruzz"
            style={boxers.viruzz.clip}
          />
          <img
            class="left-[30%] h-[70%] z-20 animate-delay-500 animate-fade-right"
            src="/boxers/fernanfloo.webp"
            alt="Fernanfloo"
            style={boxers.fernanfloo.clip}
          />
          <img
            class="left-[45%] h-[68%] z-10 animate-delay-700 animate-fade-right"
            src="/boxers/la-rivers.webp"
            alt="La Rivers"
            style={boxers["la-rivers"].clip}
          />
          <img
            class="left-[50%] h-[63%] z-0 animate-delay-1000 animate-fade-right"
            src="/boxers/papigavi.webp"
            alt="Papigavi"
            fetchpriority="low"
            style={boxers.papigavi.clip}
          />
        </div>

        <div class="relative w-full">
          <img
            class="right-0 h-full z-50 animate-fade-left"
            src="/boxers/german.webp"
            alt="Germán"
            fetchpriority="high"
            style={boxers.german.clip}
          />
          <img
            class="right-[5%] h-[80%] z-40 animate-delay-150 animate-fade-left"
            src="/boxers/amouranth.webp"
            alt="Amouranth"
            style={boxers.amouranth.clip}
          />
          <img
            class="right-[15%] h-[75%] z-30 animate-delay-300 animate-fade-left"
            src="/boxers/shelao.webp"
            alt="Shelao"
            style={boxers.shelao.clip}
          />
          <img
            class="right-[30%] h-[70%] z-20 animate-delay-500 animate-fade-left"
            src="/boxers/luzu.webp"
            alt="Luzu"
            style={boxers.luzu.clip}
          />
          <img
            class="right-[42%] h-[66%] z-10 animate-delay-700 animate-fade-left"
            src="/boxers/rivers.webp"
            alt="Rivers"
            style={boxers.rivers.clip}
          />
          <img
            class="right-[50%] h-[63%] z-0 animate-delay-1000 animate-fade-left"
            src="/boxers/ampeter.webp"
            alt="Ampeter"
            fetchpriority="low"
            style={boxers.ampeter.clip}
          />
        </div>
      </section>

      <div
        id="info"
        class="block lg:absolute lg:bottom-48 z-50 mx-auto lg:left-1/2 lg:-translate-x-1/2">
        <div class="flex flex-col">
          <div class="px-5 pt-4 pb-2 bg-white text-black text-center">
            <h2 class="boxing text-7xl"> JMg</h2>
          </div>
          <div class="px-5 pt-2 pb-1 bg-black text-white text-center">
            <a
              class="boxing text-[46px] hover:contrast-150 hover:scale-105 transition inline-block"
              href="#"
              target="_blank"
              rel="noopener noreferrer">
              <span class="text-white">twitch.tv/</span><span
                class="text-yellow-300">ibai</span
              >
            </a>
          </div>
          <div class="px-5 pt-2 pb-1 bg-sky-600 text-black text-center">
            <a
              class="hover:contrast-150 hover:scale-105 transition boxing text-4xl inline-block text-white"
              href=""
              target="_blank"
              rel="noopener noreferrer">Midudev</a
            >
          </div>
        </div>
      </div>

      <div
        id="combat"
        class="absolute bottom-48 z-50 mx-auto left-1/2 -translate-x-1/2 flex justify-center flex-col gap-y-0 opacity-0 invisible">
        <div
          class="px-5 pt-4 pb-2 mr-16 bg-black text-white text-center shadow-2xl shadow-white/50">
          <h3 class="boxing uppercase text-7xl">MAYICHI</h3>
        </div>

        <!-- <img
          src="vs.webp"
          alt=""
          width="64"
          height="64"
          class="w-16 mx-auto absolute left-1/2 -translate-x-1/2"
        /> -->
        <span class="left-3/4 -translate-x-1/2 top-18 boxing text-5xl text-yellow-500 block absolute">
            VS
        </span>

        <div class="px-5 pt-4 pb-2 ml-16 bg-white text-black text-center">
          <h3 class="boxing uppercase text-7xl">AMOURANTH</h3>
        </div>
        
      </div>
    </div>

    <section
      class="grid grid-cols-2 max-w-6xl gap-4 m-auto my-20 px-6 pt-20 pb-10 w-full h-[300px]">
      <div
        class="col-span-2 lg:col-span-1 flex w-[100%] h-[200px] rounded hover:scale-[102%] hover:contrast-[110%] transition border border-white/10">
         <img
          class="w-[200px] object-contain "
