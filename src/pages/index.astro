    <footer class="w-full flex items-center  m-auto relative">

      <div
        class="mx-auto max-w-6xl w-full overflow-hidden px-6 pt-10 pb-10 sm:py-2 lg:px-8">
        <div
          class="mt-10 flex flex-col md:flex-row gap-y-8 justify-between items-center">
          <nav class="flex gap-x-4 flex-grow basis-0 justify-start">
            <div class="flex gap-4">
